{
  "name": "nextjs-supabase-monorepo",
  "version": "1.0.0",
  "description": "Monorepo for Next.js + Supabase applications (User & Admin)",
  "scripts": {
    "dev:user": "cd apps/user-app && npm run dev",
    "dev:admin": "cd apps/admin-app && npm run dev",
    "dev:shared": "cd packages/shared && npm run dev",
    "build:user": "cd apps/user-app && npm run build",
    "build:admin": "cd apps/admin-app && npm run build",
    "build:shared": "cd packages/shared && npm run build",
    "install:all": "npm install && cd apps/user-app && npm install && cd ../admin-app && npm install && cd ../../packages/shared && npm install",
    "lint:user": "cd apps/user-app && npm run lint",
    "lint:admin": "cd apps/admin-app && npm run lint",
    "deploy:user": "cd apps/user-app && vercel --prod",
    "deploy:admin": "cd apps/admin-app && vercel --prod"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "devDependencies": {
    "@types/node": "^20",
    "typescript": "^5"
  },
  "keywords": [
    "nextjs",
    "supabase",
    "monorepo",
    "admin",
    "user-app"
  ],
  "author": "Development Team",
  "license": "MIT"
}